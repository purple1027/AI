
public class 문자열추출 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String title="자바프래로그래밍"; // 문자열 객체
		String title2=new String("자바프로그래밍");
		
		System.out.println(title2.length()); // 문자열의 길이 구하는것 length
		
		System.out.println(title2.charAt(6));
		
		title2=title2.replace("자바", "java");
		
		System.out.println(title2);
		
		
        System.out.println(title2.substring(4, 7));
		
          
          
		System.out.println(title.substring(0, 2));
		
		
		
		//밍의 인덱스 번호 알기
		
		System.out.println(title.indexOf("밍"));
		
		System.out.println(title.indexOf("래",4)); //인덱스 4번 뒤에 있는 래를 찾으세요!!!
		
		
		String names= "홍길동, 이순신, 배은영";
		String[] nameArr=names.split(",");

		for(int i=0; i< nameArr. length ; i++) {
			System.out.println(nameArr[i]);
			
			
			
		}
		
		
		
		
		
		
		
		
	} //메인
 
} // 클래스
