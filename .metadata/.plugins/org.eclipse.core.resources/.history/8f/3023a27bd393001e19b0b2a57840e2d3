import java.util.Scanner;

public class day4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
	// 문자 하나와 온도를 실수형을 입력 받아 문자가 F나 f이면 입력받은 값을 화씨로 간주하여 섭씨로 바꾸고 입력받은 문자가 C나 c이면 입력받은 값을 섭씨로 간주하여 화씨로 바꿔 결과를 출력하는 프로그램을
	//작성하시오
		
		//F = (9.0/5.0)*C+32
		//C = (5.0/9.0)*(F-32)

		
	// 1. 입력 키보드 문자 숫자
    // 2. 문자 F C 판단 (IF)
    // 3. F이면  C이면
    // 4. 출력
		
		
		//1단계 입력을 받는다
		//키보드 입력할 수 있는 클래스 사용함 (임포트)
		Scanner sc = new Scanner(System.in);
		System.out.println("---화씨를 섭씨로, 섭씨를 화씨로 바꾸기---"); //제목
		System.out.println("문자를 입력하세요? (C,F)");
	    String word=sc.next();
		System.out.println("바꾸려는 온도를 입력하세요");
	    int temperature=sc.nextInt();
		
	    
	    // 2단계 (C인지 F인지 판단해야 함)
	    
	    double result=0.0;
	    if(word.contentEquals("C") || word.equals("c")) {
	    	
	    	//섭씨를 화씨로 고치기
	
	    	result = (9.0/5.0)*temperature+32;
	    
	    } else if(word.equals("F") || word.equals("f")  );	
	    	
	    	// 화씨를 섭씨로 고치기
	    
	    result = (5.0/9.0)*(temperature-32);
	};
	
        
        System.out.println("정답은"+result);
	
}    	
	   
	    
	    
	    
	    
	    
	    

	}

}
