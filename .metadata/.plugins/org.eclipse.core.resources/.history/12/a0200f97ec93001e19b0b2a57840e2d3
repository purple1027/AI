import java.util.Scanner;

public class 연습문제 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub


		Scanner sc=new Scanner(System.in);
		System.out.println("학생명은");
		String name=sc.nextLine();
		
		
		int score=0; 
		
		while(!name.equals ("4")) {
		System.out.println("-----------------------");
		
		System.out.println("1 학생명 | 2. 점수 | 3. 출력 | 4. 종료");
		
		System.out.println("-----------------------");
		
		
		
		 switch(name) {
		    case "1": System.out.print("학생명");
		              break;
		              
		    case "2": System.out.print("점수");
		               score=sc.nextInt(); 
		               sc.nextLine();
		              
		               break;
		    case "3": System.out.print("출력");
		               break;
		              
		    case "4":System.out.print("종료");
		              break;
		    default :System.out.println("메뉴를 잘못 누르셨어요 다시");
		
		 }
		 }
		 
	} //main

} //class
