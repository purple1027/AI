package javaBasic02.ch05.sec03;

public class 배열연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		//배열: 동일한 자료들의 집합 (정수형 배열, 문자형 배열 등등) , 연속해서 저장되어 있음
		//배열 쓰는 이유 ? 정수 100개를 기억해야 한다면 변수 100개를 만들어야 하는것이 불편함
		//배열 만드는 방법은? 1차원 2차원 3차원
		
		int[] number=new int[] {1,2,3,4,5};
		String[] ABC=new String[] {"a","b"};
		double[] numbers=new double[] {1.1, 2.2, 3.3};
		boolean[] ox=new boolean[] {true, false};
	    byte[]count=new byte[] {1,2,3};
		short[] number2=new short[] {6,7};
		float[] number3=new float[] {1.1f, 2.2f};
		
		
		//arr 배열의 [0]의 값 1을 출력하려면
	 System.out.println(number[0]);
	 System.out.println(ABC[0]);
	 System.out.println(numbers[2]);
	 
	 
	 //number배열의 0의 값 1을 10으로 변경하려면?
	 
	 number[0]= 10;
	 
		
	 // 방법 2) 빈 배열을 만들고 나중에 값을 넣기
	 
	 
	 int[] intArr= new int[3];
	 double[] doubleArr2=new double[5];
	 
	 intArr[0]=3;
	 intArr[1]=5;
	 intArr[2]=7;
	
	 // 문자열 4개를 넣는 비 배열 만들기
	 
	String[]char1=new String[4];
	char1[0]="A";
	char1[1]="B";
    char1[2]="C";
	char1[3]="D";
		
		
		int[] intArr8 = new int[100];
		for(int i=0 ; i<100; i++) {
		  // int intArr81[i]=i+1;
		}
		
		for(int i=0; i<100;i++) {
		System.out.println(intArr8[i]);
		
		}
		
		
		int[] intArr10=null; // null 아직 주소가 지정되지 않았다. 미지정된 상태
		
		//166
		
		int[] score=new int[] {100,90,87,90,100};
		int sum=0;
		for(int i=0; 1<5; i++) {
			
		sum+=score[i];	
			
		};
		
		int avg=sum/30;
		
		System.out.println("합계는"+sum);
		System.out.println("평균은+"+avg);
		
		
		}
		
		
		
	

		
	} //main

} //class
