
public class 확인문제4장 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//3번 문제
		//for문 1~100까지 나오게 하기
		
		for(int i=1; 1<=100 ; i++) {
			int sum3=0; //3의 배수의 합을 넣을 변수
			if(i%3==0)
		    sum3=sum3+1;
		    System.out.println(i);
		    

			System.out.println("1~100까지 3의 배수의 합은" + sum3);
			
			
			
			
			
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	} //main
 
} // class
