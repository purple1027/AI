package javeBasic.ch03.sec02;

public class 대입연산자 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		int count=100;
		count += 10; // count=count + 10;

		
		count-=20;
		

		count = count*5;
		count *= 5;
		
		
		
		int score = 95;
		//90 이상이면 장학생 아니면 비 장학생이라고 출력하기
		
		String result = (score >= 90) ? "장학생" : "비장학생";
		System.out.println(result);
				
		
		//평균이 85.8보다 크고 합계가 1400이상이면 "통과" 아니면 "실패"라고 출력해주세요!
		
		double avg =90.34;
		int sum=2000;
		System.out.println((avg > 85.8 && sum >=1400)? "통과" : "실패");
		
		
		// 이름이 "김수연" 이거나 "이수연"이거나 "최수연"이면 "친구야! 안녕" 이라고 출력 아니면 "안녕하세요"
		
		
		
	}

}
